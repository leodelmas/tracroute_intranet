{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Actualités</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('app_admin_news_new') }}" class="btn btn-outline-primary align-items-center gap-1">
                Ajouter
                {{ bootstrap_icon('plus-circle') }}
            </a>
		</div>
	</div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.content|slice(0, 150) ~ (news.content|length > 150 ? '...' : '') }}</td>
                <td>
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">{{ bootstrap_icon('eye') }}</a>
                    <a href="{{ path('app_admin_news_edit', {'id': news.id}) }}">{{ bootstrap_icon('pencil-square') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun élément.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
