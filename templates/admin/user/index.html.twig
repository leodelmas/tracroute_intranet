{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Utilisateurs</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('app_admin_user_new') }}" class="btn btn-outline-primary align-items-center gap-1">
                Ajouter
                {{ bootstrap_icon('plus-circle') }}
            </a>
		</div>
	</div>
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th>#</th>
				<th>E-mail</th>
				<th>Rôles</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">{{ bootstrap_icon('pencil-square') }}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun élément.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
