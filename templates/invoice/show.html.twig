{% extends 'base.html.twig' %}

{% block title %}Consulter facture{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Consulter facture</h1>
	</div>
    <table class="table table-stripped">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ invoice.reference }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ invoice.date|date('d/m/y') }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ invoice.total }}€</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>
                    <table class="table">
                        <thead>
                            <th>Description</th>
                            <th>Quantité</th>
                            <th>Prix</th>
                        </thead>
                        <tbody>
                            {% for invoiceLine in invoice.invoiceLines %}
                                <tr>
                                    <td>{{ invoiceLine.description }}</td>
                                    <td>{{ invoiceLine.quantity }}</td>
                                    <td>{{ invoiceLine.price }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_invoice_index') }}" class="btn btn-outline-secondary">{{ bootstrap_icon('arrow-left-circle') }} Factures</a>
        <button class="btn btn-outline-primary">Exporter</button>
    </div>
{% endblock %}
